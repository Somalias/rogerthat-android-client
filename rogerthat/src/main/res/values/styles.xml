<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ds_slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mc_background_color</item>
        <item name="colorPrimaryDark">@color/mc_background_color</item>
        <item name="colorAccent">@color/com_facebook_blue</item>

        <!-- Changes color of the separator in the navigation view -->
        <item name="android:listDivider">@drawable/divider_gradient</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@color/mc_black</item>
        <item name="background">@color/mc_background_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
