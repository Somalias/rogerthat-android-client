<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mc_background_color"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/nav_hamburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="36dp"
        android:tint="@color/mc_primary_color"
        android:background="@null"
        android:contentDescription="hamburger_icon"
        android:onClick="onOptionNavigationViewToolbarSelected"
        android:src="@drawable/ic_menu_hamburger" />

    <ImageView
        android:id="@+id/nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_hamburger"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:contentDescription="header"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/registration_logo" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="1dp"
        android:layout_below="@+id/nav_header"
        android:background="@drawable/divider_gradient" />

</RelativeLayout>
